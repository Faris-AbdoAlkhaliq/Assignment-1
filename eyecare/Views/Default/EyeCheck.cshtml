@model eyecare.Models.EyeCheckModel

@{
    ViewBag.Title = "Eye Condition Check";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* This styling makes the form look like a clean box, similar to your original HTML */
    .form-box {
        border: 1px solid #ccc;
        padding: 20px;
        border-radius: 8px;
        max-width: 600px;
        margin: 20px auto; /* Centers the box */
        background-color: #f9f9f9;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        font-weight: bold;
        display: block;
        margin-bottom: 5px;
    }

    input[type="number"], input[type="text"], select {
        width: 100%;
        padding: 8px;
        box-sizing: border-box; /* Ensures padding doesn't break width */
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    button[type="submit"] {
        background-color: #28a745; /* Green color */
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        width: 100%;
        font-size: 16px;
    }

        button[type="submit"]:hover {
            background-color: #218838;
        }
</style>

<div class="container">
    <h2 style="text-align:center; margin-top:20px;">Eye Condition Check</h2>
    <p style="text-align:center;">Help EyeTune personalize your screen & eye-care tips.</p>

    @if (ViewBag.Message != null)
    {
        <div style="max-width: 600px; margin: 0 auto; padding: 15px; margin-bottom: 20px; border: 1px solid green; background-color: #d4edda; color: #155724; border-radius: 4px;">
            <strong>Result:</strong> @ViewBag.Message
        </div>
    }

    @using (Html.BeginForm("EyeCheck", "Default", FormMethod.Post, new { @class = "form-box" }))
    {
        <div class="form-group">
            <label for="age">Age (optional):</label>
            @Html.TextBoxFor(m => m.Age, new { type = "number", placeholder = "Enter your age" })
            @Html.ValidationMessageFor(m => m.Age, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="screenHours">Average daily screen time (hours):</label>
            @Html.TextBoxFor(m => m.ScreenHours, new { type = "number", required = "required", placeholder = "Example: 5" })
            <small style="color:gray;">We recommend between 2–6 hours with breaks.</small>
        </div>

        <div class="form-group">
            <label for="deviceType">Devices you use:</label>
            @Html.TextBoxFor(m => m.DeviceType, new { placeholder = "e.g., Laptop, Smartphone" })
        </div>

        <div class="form-group">
            <label for="glasses">Do you wear glasses?</label>
            @Html.DropDownListFor(m => m.Glasses, new List<SelectListItem>
            {
                new SelectListItem { Text = "Select", Value = "" },
                new SelectListItem { Text = "No", Value = "no" },
                new SelectListItem { Text = "Yes", Value = "yes" },
                new SelectListItem { Text = "Sometimes", Value = "sometimes" }
            })
        </div>

        <div class="form-group">
            <label for="breakReminder">Preferred break reminder interval:</label>
            @Html.TextBoxFor(m => m.BreakReminder, new { placeholder = "e.g., every 20 minutes" })
        </div>

        <button type="submit">Submit Information</button>
    }
</div>