@model eyecare.Models.UserControllerClass

@{
    ViewBag.Title = "Sign Up";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Consistent styling with your other forms */
    .form-box {
        border: 1px solid #ccc;
        padding: 30px;
        border-radius: 8px;
        max-width: 500px;
        margin: 40px auto;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        font-weight: bold;
        display: block;
        margin-bottom: 5px;
    }

    input[type="text"], input[type="password"], input[type="email"], input[type="number"] {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        box-sizing: border-box;
    }

    button[type="submit"] {
        width: 100%;
        padding: 10px;
        background-color: #28a745; /* Green for Signup */
        color: white;
        border: none;
        border-radius: 4px;
        font-size: 16px;
        cursor: pointer;
        margin-top: 10px;
    }

        button[type="submit"]:hover {
            background-color: #218838;
        }
</style>

<div class="container">
    <div class="form-box">
        <h2 style="text-align:center;">Create an Account</h2>
        <p style="text-align:center;">Join EyeTune to track your eye health.</p>

        @using (Html.BeginForm("Signup", "User", FormMethod.Post))
        {
            <div class="form-group">
                <label>Username</label>
                @Html.TextBoxFor(m => m.Username, new { placeholder = "Choose a username", required = "required" })
            </div>

            <div class="form-group">
                <label>Email</label>
                @Html.TextBoxFor(m => m.Email, new { type = "email", placeholder = "name@example.com", required = "required" })
            </div>

            <div class="form-group">
                <label>Password</label>
                @Html.PasswordFor(m => m.Password, new { placeholder = "Create a password", required = "required" })
            </div>

            <div class="form-group">
                <label>Age</label>
                @Html.TextBoxFor(m => m.Age, new { type = "number", placeholder = "Enter your age" })
            </div>

            <button type="submit">Sign Up</button>

            <p style="text-align:center; margin-top:15px;">
                Already have an account?
                @Html.ActionLink("Login here", "Login", "User")
            </p>
        }
    </div>
</div>

<!-- Success Message (e.g., "Account created!") -->
@if (TempData["SuccessMessage"] != null)
{
    <div style="color: green; background-color: #d4edda; padding: 10px; border-radius: 4px; margin-bottom: 15px; text-align: center; border: 1px solid green;">
        @TempData["SuccessMessage"]
    </div>
}

<!-- Error Message (e.g., "Invalid Password") -->
@if (ViewBag.ErrorMessage != null)
{
    <div style="color: red; background-color: #f8d7da; padding: 10px; border-radius: 4px; margin-bottom: 15px; text-align: center; border: 1px solid red;">
        @ViewBag.ErrorMessage
    </div>
}