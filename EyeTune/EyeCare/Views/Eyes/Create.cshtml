@model EyeCare.Models.Eyes

@{
    ViewData["Title"] = "Create Profile";
}

<section class="box">
    <h1>Create Your Eye Profile</h1>
    <p>Please enter your details so we can generate your eye care tips.</p>

    <form asp-action="Create">
        <div class="form-group" style="margin-top:20px;">
            <input type="submit" value="Generate My Plan" class="btn btn-primary" />
        </div>
    </form>
</section>
<h1>Create</h1>

<h4>Eyes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" class="form-control">
                    <option value="">-- Select Gender --</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Prefer not to say">Prefer not to say</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScreenTimeHoursPerDay" class="control-label"></label>
                <input asp-for="ScreenTimeHoursPerDay" class="form-control" />
                <span asp-validation-for="ScreenTimeHoursPerDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GlassesType" class="control-label"></label>
                <select asp-for="GlassesType" class="form-control">
                    <option value="None">None (I don't wear glasses)</option>
                    <option value="Distance">Single Vision (Distance)</option>
                    <option value="Reading">Reading Glasses</option>
                    <option value="Bifocal">Bifocals</option>
                    <option value="Progressive">Progressive / Varifocals</option>
                    <option value="Contact Lenses">Contact Lenses</option>
                </select>
                <span asp-validation-for="GlassesType" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HasEyeDisease" /> @Html.DisplayNameFor(model => model.HasEyeDisease)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="EyeDiseaseDetails" class="control-label"></label>
                <select asp-for="EyeDiseaseDetails" class="form-control">
                    <option value="None">None</option>
                    <option value="Myopia">Myopia (Nearsightedness)</option>
                    <option value="Hyperopia">Hyperopia (Farsightedness)</option>
                    <option value="Astigmatism">Astigmatism</option>
                    <option value="Cataract">Cataract</option>
                    <option value="Glaucoma">Glaucoma</option>
                    <option value="Diabetic Retinopathy">Diabetic Retinopathy</option>
                    <option value="Macular Degeneration">Macular Degeneration</option>
                    <option value="Other">Other</option>
                </select>
                <span asp-validation-for="EyeDiseaseDetails" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="FamilyHistoryOfEyeDisease" /> @Html.DisplayNameFor(model => model.FamilyHistoryOfEyeDisease)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="PastEyeSurgeries" class="control-label"></label>
                <select asp-for="PastEyeSurgeries" class="form-control">
                    <option value="None">None</option>
                    <option value="LASIK">LASIK</option>
                    <option value="PRK">PRK (Photorefractive Keratectomy)</option>
                    <option value="Cataract Surgery">Cataract Surgery</option>
                    <option value="Retinal Surgery">Retinal Surgery</option>
                    <option value="Cornea Transplant">Cornea Transplant</option>
                    <option value="Other">Other</option>
                </select>
                <span asp-validation-for="PastEyeSurgeries" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ExperiencesEyeStrain" /> @Html.DisplayNameFor(model => model.ExperiencesEyeStrain)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ExperiencesDryEyes" /> @Html.DisplayNameFor(model => model.ExperiencesDryEyes)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="BlurredVision" /> @Html.DisplayNameFor(model => model.BlurredVision)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Smokes" /> @Html.DisplayNameFor(model => model.Smokes)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="WearsSunglasses" /> @Html.DisplayNameFor(model => model.WearsSunglasses)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="LastEyeCheckupInMonths" class="control-label"></label>
                <input asp-for="LastEyeCheckupInMonths" class="form-control" />
                <span asp-validation-for="LastEyeCheckupInMonths" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="UsesEyeDrops" /> @Html.DisplayNameFor(model => model.UsesEyeDrops)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
