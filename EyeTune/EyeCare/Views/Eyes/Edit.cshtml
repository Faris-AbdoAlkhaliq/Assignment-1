                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HasEyeDisease" /> @Html.DisplayNameFor(model => model.HasEyeDisease)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="EyeDiseaseDetails" class="control-label"></label>
                <input asp-for="EyeDiseaseDetails" class="form-control" />
