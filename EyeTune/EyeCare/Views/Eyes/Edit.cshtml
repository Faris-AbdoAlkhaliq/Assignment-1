@model EyeCare.Models.Eyes

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Eyes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScreenTimeHoursPerDay" class="control-label"></label>
                <input asp-for="ScreenTimeHoursPerDay" class="form-control" />
                <span asp-validation-for="ScreenTimeHoursPerDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GlassesType" class="control-label"></label>
                <input asp-for="GlassesType" class="form-control" />
                <span asp-validation-for="GlassesType" class="text-danger"></span>
            </div>
