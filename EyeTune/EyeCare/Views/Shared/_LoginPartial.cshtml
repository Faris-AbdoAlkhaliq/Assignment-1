@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Http
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject IHttpContextAccessor HttpContextAccessor

<div class="login-group">

    @if (SignInManager.IsSignedIn(User))
    {
        <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage Profile" style="text-decoration: none;">
            @if (Context.Session.GetInt32("UserAge") != null)
            {
                <span class="age-badge">
                    <span>&#128065;</span>
                    Age: @Context.Session.GetInt32("UserAge")
                </span>
            }
            else
            {
                <span>Hello, @User.Identity?.Name!</span>
            }
        </a>

        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" style="display:inline;">
            <button type="submit" class="logout-btn">Logout</button>
        </form>
    }
    else
    {
        <a asp-area="Identity" asp-page="/Account/Register">Register</a>
        <a asp-area="Identity" asp-page="/Account/Login">Login</a>
    }

</div>